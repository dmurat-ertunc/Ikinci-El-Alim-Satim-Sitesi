@model KategorilerIlanlarUrunlerUser
@{
    ViewData["Title"] = "BegendigimIlanlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w3-sidebar w3-bar-block w3-light-grey w3-card" style="margin-top:30px; margin-left:180px; background-color:#fff; border:23px whitesmoke inset border-radius:15px; width:1500px;">
    <h2 style="text-align:center;">Beğendiğim İlanlar</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col" style="background-color:gainsboro;">#</th>
                <th scope="col" style="background-color:gainsboro;">Fotoğraf</th>
                <th scope="col" style="background-color:gainsboro;">İlan Adı</th>
                <th scope="col" style="background-color:gainsboro;">Açıklama</th>
                <th scope="col" style="background-color:gainsboro;">Kategori</th>
                <th scope="col" style="background-color:gainsboro;">Ürün Çeşiti</th>
                <th scope="col" style="background-color:gainsboro;">Fiyat</th>
                <th scope="col" style="background-color:gainsboro;">Görüntüle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.begendigimTMPs)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><img src="@item.FotoUrl2" style="width:100px; height:100px;" /></td>
                    <td>@item.IlanAd</td>
                    <td>@item.Aciklama</td>
                    <td>@item.KategroiAd</td>
                    <td>@item.UrunCesiti</td>
                    <td>@item.Fiyat</td>
                    <td><a class="btn btn-primary" href="/IlanDetay/Index/@item.Id">Görüntüle</a></td>
                </tr>
            }

        </tbody>
    </table>
</div>

